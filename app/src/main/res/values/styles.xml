<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/mainAccent</item>
    </style>

    <style name="AppThemePastelLight" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="colorPrimary">@color/pastelPrimary</item>
        <item name="colorPrimaryDark">@color/pastelPrimary</item>
        <item name="colorAccent">@color/pastelPrimary</item>
        <item name="colorControlNormal">@color/aquamarine</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/pastelPrimary</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/allerta</item>
    </style>

    <style name="AppTheme2" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleBarTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/fugaz_one</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="ButtonStyleHorizontalScroll" >
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/aquamarine</item>
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="elevation">20dp</item>
        <item name="android:layout_margin">6dp</item>
    </style>
</resources>
